<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginBottom="20dp"
        android:weightSum="4"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:src="@drawable/theme_icon" />

        <TextView
            android:id="@+id/theme_layout_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_layout_heading_text"
            android:textColor="?attr/MediumColor"
            android:textSize="24sp" />
    </LinearLayout>
    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">
        <Switch
            android:id="@+id/dark_mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/DeepColor"
            android:text="@string/theme_layout_switch_text"
            android:theme="@style/SwitchStyle"/>
    </LinearLayout>
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:weightSum="3"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/green_color_scheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_marginEnd="20dp"
            android:background="@color/MediumGreen"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/red_color_scheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:background="@color/MediumRed"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/grey_color_scheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:background="@color/DarkGrey"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:weightSum="3"
        android:padding="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/blue_color_scheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:background="@color/LightBlue"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/violet_color_scheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:background="@color/MediumViolet"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/pink_color_scheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/MediumPink"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>