<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="16dp">
        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/PureGreen"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/PureRed" />
        <Button
            android:id="@+id/save_load_button"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/generate_pass_button_style"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/generate_pass_button_style"
            android:contentDescription="@string/back_button"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_icon"
            android:textAllCaps="false"/>
        <HorizontalScrollView
            android:id="@+id/FolderName"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/round_textview_grey">
            <TextView
                android:id="@+id/FolderName1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:background="@drawable/round_textview_grey"
                android:text="test"
                android:textAlignment="center"
                android:textColor="@color/PureRed"
                android:textSize="24sp"
                android:gravity="center"/>
        </HorizontalScrollView>
        <ImageButton
            android:id="@+id/new_folder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/generate_pass_button_style"
            android:contentDescription="@string/new_folder"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/new_folder_icon"
            android:textAllCaps="false"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/file_explorer_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_style"
        android:scrollbars="vertical"
        android:layoutAnimation="@anim/layout_fall_down" />
</androidx.appcompat.widget.LinearLayoutCompat>